{
  "name": "@gsa-sam/sam-ui-elements",
  "version": "0.0.10",
  "description": "SAM UI library",
  "keywords": [
    "angular2",
    "webpack",
    "typescript"
  ],
  "files": [
    "src/",
    "index.ts",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "rimraf": "rimraf",
    "tslint": "tslint",
    "typedoc": "typedoc",
    "webpack": "webpack",
    "webpack-dev-server": "webpack-dev-server",
    "webdriver-manager": "webdriver-manager",
    "protractor": "protractor",
    "clean": "npm cache clean && npm run rimraf -- node_modules doc coverage dist",
    "clean:dist": "npm run rimraf -- dist",
    "preclean:install": "npm run clean",
    "clean:install": "npm set progress=false && npm install",
    "preclean:start": "npm run clean",
    "clean:start": "npm start",
    "watch": "npm run watch:dev",
    "watch:dev": "npm run build:dev -- --watch",
    "watch:dev:hmr": "npm run watch:dev -- --hot",
    "watch:test": "npm run test -- --auto-watch --no-single-run",
    "watch:prod": "npm run build:prod -- --watch",
    "build": "npm run build:dev",
    "prebuild:dev": "npm run clean:dist",
    "build:dev": "webpack --config config/webpack.dev.js --progress --profile",
    "prebuild:prod": "npm run clean:dist",
    "build:prod": "webpack --config config/webpack.prod.js  --progress --profile --bail",
    "server": "exit 0",
    "server:dev": "webpack-dev-server --config config/webpack.dev.js --progress --profile --watch --content-base src/",
    "server:dev:hmr": "npm run server:dev -- --inline --hot",
    "server:prod": "http-server dist --cors",
    "prod": "exit 0",
    "webdriver:update": "npm run webdriver-manager update",
    "webdriver:start": "npm run webdriver-manager start",
    "lint": "npm run tslint \"src/**/*.ts\"",
    "pree2e": "npm run webdriver:update -- --standalone",
    "e2e": "npm run protractor",
    "e2e:live": "npm run e2e -- --elementExplorer",
    "test": "node mock-test.js",
    "test:original": "karma start",
    "test:no-lint": "karma start --no-lint",
    "ci": "npm run lint && npm test && npm run e2e",
    "docs": "npm run typedoc -- --options typedoc.json --exclude '**/*.spec.ts' ./src/",
    "start": "exit 0",
    "start:hmr": "npm run server:dev:hmr",
    "preversion": "npm test",
    "version": "npm run build",
    "postversion": "git push && git push --tags",
    "install:peers": "npm install @angular/animations@4.3.3 @angular/common@4.3.3 @angular/compiler@4.3.3 @angular/compiler-cli@4.3.3 @angular/core@4.3.3 @angular/core@4.3.3 @angular/forms@4.3.3 @angular/http@4.3.3 @angular/forms@4.3.3 @angular/platform-browser@4.3.3 @angular/platform-browser-dynamic@4.3.3 @angular/platform-server@4.3.3 @angular/router@4.3.3 rxjs@5.0.1 moment@2.15.2",
    "uninstall:peers": "npm uninstall @angular/animations@4.3.3 @angular/common@4.3.3 @angular/compiler@4.3.3 @angular/compiler-cli@4.3.3 @angular/core@4.3.3 @angular/core@4.3.3 @angular/forms@4.3.3 @angular/http@4.3.3 @angular/forms@4.3.3 @angular/platform-browser@4.3.3 @angular/platform-browser-dynamic@4.3.3 @angular/platform-server@4.3.3 @angular/router@4.3.3 rxjs@5.0.1 moment@2.15.2",
    "clear-modules": "rm -rf node_modules"
  },
  "peerDependencies": {
    "@angular/animations": "4.3.3",
    "@angular/cdk": "2.0.0-beta.8",
    "@angular/common": "4.3.3",
    "@angular/compiler": "4.3.3",
    "@angular/compiler-cli": "4.3.3",
    "@angular/core": "4.3.3",
    "@angular/forms": "4.3.3",
    "@angular/http": "4.3.3",
    "@angular/platform-browser": "4.3.3",
    "@angular/platform-browser-dynamic": "4.3.3",
    "@angular/platform-server": "4.3.3",
    "@angular/router": "4.3.3",
    "@angularclass/conventions-loader": "1.0.12",
    "@fortawesome/fontawesome-svg-core": "1.2.2",
    "@fortawesome/free-solid-svg-icons": "5.2.0",
    "@ngx-formly/core": "^2.1.1",
    "accessible-html5-video-player": "^1.0.3",
    "core-js": "2.4.1",
    "ie-shim": "0.1.0",
    "rxjs": "5.0.1",
    "zone.js": "0.8.14",
    "moment": "~2.15.2"
  },
  "devDependencies": {
    "@angularclass/hmr": "1.0.1",
    "@angularclass/hmr-loader": "1.0.1",
    "@types/core-js": "0.9.28",
    "@types/hammerjs": "2.0.28",
    "@types/jasmine": "2.2.29",
    "@types/moment-timezone": "^0.2.34",
    "@types/node": "6.0.38",
    "@types/protractor": "1.5.16",
    "@types/selenium-webdriver": "2.44.26",
    "@types/source-map": "0.1.26",
    "@types/uglify-js": "2.0.27",
    "@types/webpack": "1.12.29",
    "angular2-hmr": "~0.8.0",
    "angular2-template-loader": "0.5.0",
    "awesome-typescript-loader": "3.1.2",
    "codelyzer": "0.0.28",
    "copy-webpack-plugin": "3.0.1",
    "css-loader": "0.24.0",
    "exports-loader": "0.6.3",
    "expose-loader": "0.7.1",
    "file-loader": "0.9.0",
    "html-webpack-plugin": "2.21.0",
    "imports-loader": "0.6.5",
    "istanbul-instrumenter-loader": "0.2.0",
    "json-loader": "0.5.4",
    "karma": "0.13.22",
    "karma-phantomjs-launcher": "1.0.2",
    "karma-coverage": "1.0.0",
    "karma-jasmine": "1.0.2",
    "karma-mocha-reporter": "2.0.0",
    "karma-sonarqube-unit-reporter": "0.0.11",
    "karma-sourcemap-loader": "0.3.7",
    "karma-webpack": "1.8.0",
    "lodash.clone": "^4.5.0",
    "lodash.merge": "^4.6.0",
    "parse5": "1.3.2",
    "protractor": "3.2.2",
    "raw-loader": "0.5.1",
    "remap-istanbul": "0.6.3",
    "rimraf": "2.5.2",
    "source-map-loader": "0.1.5",
    "string-replace-loader": "1.0.3",
    "style-loader": "0.13.1",
    "to-string-loader": "1.1.4",
    "ts-helpers": "1.1.1",
    "ts-node": "1.3.0",
    "tslint": "3.15.1",
    "tslint-loader": "2.1.5",
    "typedoc": "^0.5.0",
    "typescript": "2.4.2",
    "url-loader": "0.5.7",
    "webpack": "1.13.2",
    "webpack-dev-middleware": "1.6.1",
    "webpack-dev-server": "1.15.2",
    "webpack-md5-hash": "0.0.5",
    "webpack-merge": "0.14.0"
  }
}
